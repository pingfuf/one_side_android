        <activity android:name="com.oneside.ui.photopicker.PhotoPreviewWhenPickActivity" />
        <activity android:name="com.oneside.ui.photopicker.PhotoPreviewAfterPickActivity" />
        <activity android:name="com.oneside.ui.gym.MerchantFacilitiesActivity" />
        <activity android:name="com.oneside.ui.user.CustomerDetailActivity"
            android:launchMode="singleTask"/>

        <activity android:name="com.oneside.hy.HyConfigActivity" />

        <activity android:name="com.oneside.ui.course.CoachCourseRecordDetailActivity"/>
        <activity android:name="com.oneside.ui.course.CoachPersonalCourseDetailActivity" />
        <activity android:name="com.oneside.ui.story.CardLeftDaysActivity" />
        <activity android:name="com.oneside.ui.user.AddPhysicalRecordPhotoActivity" />

        <activity
            android:name="com.oneside.ui.user.UserCommentActivity"
            android:windowSoftInputMode="stateAlwaysVisible|adjustPan" />
        <activity
            android:name="com.oneside.ui.JumpCenterActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
