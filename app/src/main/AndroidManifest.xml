        <activity android:name="com.oneside.ui.coach.CoachReceiveRecordListActivity" />
        <activity android:name="com.oneside.ui.course.CoachPersonalCourseActivity" />

        <!-- 用户 -->
        <activity android:name="com.oneside.ui.user.UserPhysicalRecordActivity" />
        <activity android:name="com.oneside.ui.user.CustomerSourceActivity" />
        <activity android:name="com.oneside.ui.user.CustomerTypeActivity" />

        <!-- 课程 -->
        <activity android:name="com.oneside.ui.course.CourseTrainPartsOfBodyActivity"/>

        <!-- 友盟 -->
        <activity android:name="com.umeng.fb.ConversationActivity" />

        <activity android:name="com.oneside.ui.CustomQuestionsDetailsActivity" />
        <activity android:name="com.oneside.ui.story.CustomerCardsActivity" />
