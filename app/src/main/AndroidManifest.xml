        <activity android:name="com.oneside.ui.coach.CoachReceiveSuccessActivity" />
        <activity android:name="com.oneside.ui.user.AddPhysicalRecordDetailActivity" />
        <activity android:name="com.oneside.ui.gym.MerchantTimeCountActivity" />
        <activity android:name="com.oneside.ui.home.OpenDoorActivity" />
        <activity android:name="com.oneside.hy.CardWebActivity" />
        <activity
            android:name="com.oneside.ui.wxapi.WXEntryActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity android:name="com.oneside.ui.QRCodeScanningActivity" />
        <activity android:name="com.oneside.ui.QRCodeScanResultActivity" />
        <activity android:name="com.oneside.ui.story.StoryDetailActivity" />
        <activity android:name="com.oneside.ui.course.CoachAddCourseActivity" />
        <!-- wechat pay -->



        <receiver android:name="com.oneside.base.CardNetWorkReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="b3b2fedfc28fff9410de75066c9ec7c6" />
