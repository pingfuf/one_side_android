    <!--android:background="@drawable/corners_personal_coach_green"/>-->
    <LinearLayout
        android:id="@+id/layout_course_types"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_course_name"
        android:layout_alignTop="@id/tv_course_name"
        android:layout_toRightOf="@id/tv_course_name"
        android:orientation="horizontal">

    </LinearLayout>

    <TextView
        android:id="@+id/tv_course_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_course_name"
        android:layout_below="@id/tv_course_name"
        android:layout_marginTop="8dp"
        android:text="textVIew"
        android:textColor="@color/text_color_gray"
        android:textSize="@dimen/text_size_describe"/>

    <TextView
        android:id="@+id/tv_course_coach_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_course_time"
        android:layout_below="@id/tv_course_time"
        android:layout_marginTop="8dp"
        android:text="textVIew"
        android:textColor="@color/text_color_net_btn"
        android:textSize="@dimen/text_size_sub_title"/>


    <TextView
        android:id="@+id/tv_course_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:text="90"
        android:textColor="@color/orange"
        android:textSize="13sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_alignLeft="@id/tv_course_name"
        android:layout_below="@id/tv_course_coach_name"
        android:layout_marginTop="15dp"
        android:background="@color/line_gray"/>

</RelativeLayout>