<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/selector_list_item_background"
                android:minHeight="100dp">


    <com.oneside.ui.view.RoundLazyImageView
        android:id="@+id/iv_coach_avator"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:background="@drawable/circle_border_tv"
        android:scaleType="centerInside"
        android:src="@drawable/ic_user_logo_loading_72_in_list"/>

    <TextView
        android:id="@+id/tv_course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/iv_coach_avator"
        android:maxEms="8"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="textVIewssggggggggggg"
        android:textColor="@color/text_color_deep_gray"
        android:textSize="@dimen/text_size_main_title"/>

    <!--<TextView-->
