<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center" >

    <TextView
        android:id="@+id/tv_choose_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:ellipsize="middle"
        android:maxLength="6"
        android:singleLine="true"
        android:text="@string/business_zone"
        android:textColor="@color/text_color_gray_black"
        android:textSize="@dimen/text_size_sub_title" />

    <RelativeLayout
        android:id="@+id/layout_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/tv_choose_title"
        android:gravity="center" >

        <ImageView
            android:id="@+id/iv_choose_icon_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_business_zone_red_down" 
            android:alpha="0"/>

        <ImageView
            android:id="@+id/iv_choose_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_business_zone_down" />
    </RelativeLayout>

</RelativeLayout>