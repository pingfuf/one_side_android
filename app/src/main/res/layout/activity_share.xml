<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/share_act_bg" >

    <ImageView
        android:id="@+id/iv_share_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_share_logo"
        android:layout_margin="15dp"
        android:gravity="center_horizontal"
        android:textColor="@color/share_act_text_color"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_invite_friends"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/tv_msg"

        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_orange_login_bg"
        android:text="邀请好友"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>