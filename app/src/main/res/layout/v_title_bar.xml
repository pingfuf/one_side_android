<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <!-- left button: button + text -->
    <LinearLayout
        android:id="@+id/ll_left_content"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/base_title_height"
        android:layout_alignParentLeft="true"
        android:layout_gravity="left|center_vertical"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingRight="@dimen/base_title_horizontal_margin">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/base_title_height"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/base_title_horizontal_margin"
            android:src="@drawable/ic_arrow_left_red" />

        <View
            android:id="@+id/v_new_message"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/circle_yellow_btn_bg"
            android:visibility="gone"/>

    </LinearLayout>

    <!-- center title: TextView+button -->
    <LinearLayout
        android:id="@+id/ll_center_content"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:orientation="horizontal"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/base_title_height"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="11"
            android:singleLine="true"
            android:textColor="@color/text_color_gray_dark_black"
            android:textSize="@dimen/base_title_text_size" />

    </LinearLayout>


    <!-- right button -->
    <LinearLayout
        android:id="@+id/ll_right_content"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/base_title_height"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/base_title_height"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/base_title_horizontal_margin"
            android:textColor="@color/text_color_gray_black"
            android:textSize="@dimen/base_left_right_text_size"/>

    </LinearLayout>

</merge>