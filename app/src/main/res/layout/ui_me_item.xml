<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_trans_pressed_gray_bkg"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/me_item_iv_left"
        android:layout_width="50dp"
        android:layout_height="@dimen/item_height"
        android:layout_marginLeft="6dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/me_item_iv_left_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_height"
        android:layout_toRightOf="@id/me_item_iv_left"
        android:gravity="center_vertical"
        android:textColor="@color/merchant_logo_default_color"
        android:textSize="16sp" />

    <View
        android:id="@+id/me_item_view_horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#ffdddddd" />

    <ImageView
        android:id="@+id/me_item_iv_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_arrow_right" />

    <View
        android:id="@+id/me_item_view_my_msg_circle"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/me_item_iv_right_arrow"
        android:background="@drawable/circle_red_btn_bg"
        android:visibility="gone" />

    <TextView
        android:id="@+id/me_item_tv_right_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_height"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/me_item_view_my_msg_circle"
        android:gravity="center_vertical"
        android:textColor="@color/text_color_gray"
        android:textSize="14sp"
        android:visibility="gone" />

</RelativeLayout>