<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_success_icon"
        android:layout_marginTop="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="顾客信息已提交成功!"
        android:textSize="18sp"
        android:textColor="@color/green_open_door"/>

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="160dp"
        android:layout_height="44dp"
        android:layout_marginTop="60dp"
        android:background="@color/green_open_door"
        android:text="继续录入"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btn_go_to_main"
        android:layout_width="160dp"
        android:layout_height="44dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:text="返回首页"
        android:textColor="@color/text_color_gray_66"/>

</LinearLayout>