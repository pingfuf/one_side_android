<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:background="@drawable/selector_list_item_corner_13sp_background">

    <ImageView
        android:id="@+id/iv_card_icon"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_vip_big_red_icon" />

    <TextView
        android:id="@+id/tv_card_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_card_icon"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="健身月卡"
        android:textColor="@color/text_color_gray_black"
        android:textSize="@dimen/text_size_list" />

    <TextView
        android:id="@+id/tv_card_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_card_icon"
        android:layout_below="@+id/tv_card_name"
        android:ellipsize="end"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:text="本卡只能使用三次，过期不能使用"
        android:textColor="@color/text_color_gray"
        android:textSize="14sp" />


    <LinearLayout
        android:id="@+id/ll_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_card_icon"
        android:layout_below="@+id/tv_card_description"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_promotion_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:gravity="right"
            android:text="￥0.0"
            android:textColor="@color/papaya_primary_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_common_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="1dp"
            android:text="￥0.0"
            android:textColor="@color/text_color_gray"
            android:textSize="14sp" />

    </LinearLayout>
</RelativeLayout>