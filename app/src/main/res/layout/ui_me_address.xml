<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_white_to_alpha"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/me_address_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_margin_left_right"
        android:scaleType="centerInside"
        android:src="@drawable/question_mark" />

    <ImageView
        android:id="@+id/me_address_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/me_address_del"
        android:scaleType="centerInside"
        android:src="@drawable/question_mark" />

    <TextView
        android:id="@+id/me_address_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/me_address_img"
        android:text="å®¶"
        android:textColor="@color/gray_pressed_deeply"
        android:textSize="@dimen/text_size_sub_title" />

    <View
        android:id="@+id/me_address_horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/me_address_img"
        android:background="@color/line_gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/me_address_img"
        android:background="#ffdddddd"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/me_address_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/common_margin_left_right"
        android:src="@drawable/ic_arrow_right" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/me_address_right_arrow"
        android:layout_toRightOf="@id/me_address_img"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/me_address_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="wenwenwen"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_size_main_title" />

        <TextView
            android:id="@+id/me_address_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="top"
            android:singleLine="true"
            android:text="wenwenwen"
            android:textColor="@color/text_color_net_btn"
            android:textSize="@dimen/text_size_minimal" />
    </LinearLayout>

</RelativeLayout>