<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_title_height"
        android:background="@color/papaya_primary_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <!-- @color/search_white_gray-->
        <ImageView
            android:id="@+id/address_left_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/base_title_height"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:src="@drawable/btn_back_white" />
        <!--@drawable/btn_back_black-->
        <EditText
            android:id="@+id/poi_search_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_tv_height"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:background="@drawable/corners_search_papaya_color_border_bg"
            android:drawableLeft="@drawable/ic_search_white"
            android:hint="@string/address_edit_hint"
            android:paddingLeft="6dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/alpha_30_percent_white"
            android:textSize="@dimen/text_size_micro_small"></EditText>
    </LinearLayout>

    <ListView
        android:id="@+id/area_name_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/line_gray"
        android:dividerHeight="0.5dp" />

</LinearLayout>