<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background">

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_header"
                android:layout_width="142dp"
                android:layout_height="108dp"
                android:layout_marginTop="80dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_logo" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_login_word" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="账号"
                android:textColor="@color/text_color_gray_black"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@color/layout_background"
                    android:hint="@string/login_name_hint"
                    android:textColorHint="@color/dark_shadow"
                    android:textColor="@color/text_color_gray_66"
                    android:textSize="15sp"
                    android:singleLine="true" />

                <ImageView
                    android:id="@+id/iv_name"
                    android:layout_width="32dp"
                    android:layout_height="22dp"
                    android:paddingLeft="10dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_arrow_down" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/list_divider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="密码"
                android:textColor="@color/text_color_gray_black"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/edt_password"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/layout_background"
                        android:hint="@string/login_pass_hint"
                        android:inputType="textPassword"
                        android:textColorHint="@color/dark_shadow"
                        android:textColor="@color/text_color_gray_66"
                        android:textSize="15sp"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/edt_password2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/layout_background"
                        android:textColorHint="@color/dark_shadow"
                        android:textColor="@color/text_color_gray_66"
                        android:hint="@string/login_pass_hint"
                        android:textSize="15sp"
                        android:inputType="text"
                        android:singleLine="true"
                        android:visibility="gone" />

                </RelativeLayout>


                <ImageView
                    android:id="@+id/iv_password"
                    android:layout_width="32dp"
                    android:layout_height="22dp"
                    android:paddingLeft="10dp"

                    android:scaleType="fitXY"
                    android:src="@drawable/ic_open_eye_gray" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/list_divider" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="43dp"
                android:background="@drawable/gradient_btn_submit"
                android:text="@string/btn_login"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>