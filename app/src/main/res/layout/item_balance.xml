<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_background_gray"
    android:orientation="vertical">

    <TextView
        android:id="@+id/show_date"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_margin_left_right"
        android:paddingRight="@dimen/common_margin_left_right"
        android:text="2015-09-15"
        android:textColor="@color/text_color_net_btn"
        android:textSize="@dimen/text_size_sub_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="15dp"
        android:paddingLeft="@dimen/common_margin_left_right"
        android:paddingRight="@dimen/common_margin_left_right"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/show_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-09-15"
            android:textColor="@color/text_color_gray_black2"
            android:textSize="@dimen/text_size_sub_title"
            android:visibility="gone" />

        <TextView
            android:id="@+id/show_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/show_title"
            android:text="2015-09-15"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_list" />

        <TextView
            android:id="@+id/show_details_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/show_msg"
            android:layout_marginTop="8dp"
            android:text="2015-09-15"
            android:textColor="@color/edit_hint_gray"
            android:textSize="@dimen/text_size_describe" />

        <TextView
            android:id="@+id/show_consume_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="+30.00"
            android:textColor="@color/papaya_primary_color"
            android:textSize="@dimen/text_size_larger" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffdddddd"
        android:paddingLeft="@dimen/common_margin_left_right" />

</LinearLayout>