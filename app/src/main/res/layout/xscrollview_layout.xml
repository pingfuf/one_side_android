<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/xscrollview_header_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:visibility="gone" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/xscrollview_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/xscrollview_header_content" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/xscrollview_footer_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/xscrollview_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:visibility="gone" >
    </RelativeLayout>

</RelativeLayout>