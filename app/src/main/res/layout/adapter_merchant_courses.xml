<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_item_background">

    <com.oneside.ui.view.RoundLazyImageView
        android:id="@+id/iv_course_type"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_my_order_swimming" />

    <LinearLayout
        android:id="@+id/desc_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/tv_course_remaining"
        android:layout_toRightOf="@id/iv_course_type"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="hahahah"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="@dimen/text_size_main_title" />

        <TextView
            android:id="@+id/tv_course_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_course_type"
            android:layout_alignLeft="@id/tv_course_name"
            android:text="textVIew"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/text_size_describe" />

        <TextView
            android:id="@+id/tv_coach_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="hahahah"
            android:textColor="@color/text_color_deep_gray"
            android:textSize="@dimen/text_size_sub_title" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_course_remaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:text="hahahah"
        android:textColor="@color/orange"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_alignLeft="@id/desc_layout"
        android:layout_below="@id/iv_course_type"
        android:layout_marginTop="15dp"
        android:background="@color/line_gray" />

</RelativeLayout>